<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<SoundDef Abstract="True" Name="BurpSounds">
		<context>MapOnly</context>
		<sustain>False</sustain>
		<maxVoices>10</maxVoices>
		<maxSimultaneous>3</maxSimultaneous>
		<priorityMode>PrioritizeNearest</priorityMode>
	</SoundDef>

	<!-- Stomach Burp Sounds -->
	<SoundDef ParentName="BurpSounds">
		<defName>RR_StomachBurp_Light</defName>
		<subSounds>
			<li>
				<muteWhenPaused>True</muteWhenPaused>
				<grains>
					<li Class="AudioGrain_Folder">
						<clipFolderPath>Organic/Stomach/Belch/Light</clipFolderPath>
					</li>
				</grains>
				<volumeRange>7~7</volumeRange>
				<distRange>10~30</distRange>
				<sustainLoop>False</sustainLoop>
				<paramMappings>
					<li>
						<inParam Class="RimRound.Sound.SoundParamSource_Burp" />
						<outParam Class="SoundParamTarget_Volume" />
					</li>
				</paramMappings>
			</li>
		</subSounds>
	</SoundDef>
	
