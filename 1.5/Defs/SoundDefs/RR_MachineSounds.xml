			  </li>
			</grains>
			<volumeRange>30</volumeRange>
			<distRange>10~40</distRange>
			<paramMappings>
				<li>
					<inParam Class="RimRound.Sound.SoundParamSource_FeedingMachineOn" />
					<outParam Class="SoundParamTarget_Volume" />
				</li>
			</paramMappings>
		  </li>
		</subSounds>
		<priorityMode>PrioritizeNearest</priorityMode>
	</SoundDef>
  
